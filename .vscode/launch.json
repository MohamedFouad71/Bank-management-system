{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Bank Management System",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main.exe", // Path to the compiled executable
            "args": [], // Add any command-line arguments if needed
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe", // Ensure gdb is installed and in your PATH
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Bank Management System" // Build the project before debugging
        }
    ]
}